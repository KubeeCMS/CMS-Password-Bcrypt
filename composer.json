{
  "name": "kubeecms/cms-password-bcrypt",
  "license": "GNU",
  "description": "Replaces wp_hash_password and wp_check_password's phpass hasher with PHP 5.5's password_hash and password_verify using bcrypt.",
  "homepage": "https://github.com/kubeecms/cms-password-bcrypt/issues/",
  "authors": [
    {
      "name": "Romeo Covaci",
      "email": "romeo.covaci@gmail.com",
      "homepage": "https://github.com/romeocovaci/"
    }
  ],
  "keywords": [
    "kcms cms bcrypt password"
  ],
  "support": {
    "issues": "https://github.com/kubeecms/cms-password-bcrypt/issues/",
    "forum": "https://discourse.kubeecms.io/"
  },
  "require": {
    "php": ">=7.1",
    "composer/installers": "~1.0"
  },
  "require-dev": {
    "brain/monkey": "^1.3.1",
    "mockery/mockery": "^0.9.4",
    "squizlabs/php_codesniffer": "^2.5.1",
    "phpunit/phpunit": "^4.8.23|^5.2.9"
  },
  "autoload": {
    "files": ["cms-password-bcrypt.php"]
  },
  "archive" : {
    "exclude": [
      ".editorconfig",
      ".gitattributes",
      ".gitignore",
      ".travis.yml",
      "CONTRIBUTING.md",
      "phpcs.xml",
      "phpunit.xml",
      "tests"
    ]
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs",
      "vendor/bin/phpunit --colors=always"
    ]
  }
}
